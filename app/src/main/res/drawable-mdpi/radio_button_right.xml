<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape>
            <corners android:topRightRadius="@dimen/activity_horizontal_margin" android:bottomRightRadius="@dimen/activity_horizontal_margin" />
            <solid android:color="@color/colorAccent" />
            <padding android:bottom="@dimen/activity_horizontal_margin" android:left="@dimen/activity_horizontal_margin" android:right="@dimen/activity_horizontal_margin" android:top="@dimen/activity_horizontal_margin" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape>
            <corners android:topRightRadius="@dimen/activity_horizontal_margin" android:bottomRightRadius="@dimen/activity_horizontal_margin" />
            <solid android:color="#00000000" />
            <stroke android:width="2dp" android:color="@color/colorAccent" />
            <padding android:bottom="@dimen/activity_horizontal_margin" android:left="@dimen/activity_horizontal_margin" android:right="@dimen/activity_horizontal_margin" android:top="@dimen/activity_horizontal_margin" />
        </shape>
    </item>

    <item>
        <shape>
            <corners android:topRightRadius="@dimen/activity_horizontal_margin" android:bottomRightRadius="@dimen/activity_horizontal_margin" />
            <stroke android:width="2dp" android:color="@color/colorAccent" />
            <padding android:bottom="@dimen/activity_horizontal_margin" android:left="@dimen/activity_horizontal_margin" android:right="@dimen/activity_horizontal_margin" android:top="@dimen/activity_horizontal_margin" />
        </shape>
    </item>
</selector>